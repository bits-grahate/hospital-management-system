		{
			"name": "Billing Events",
			"item": [
				{
					"name": "Process Billing Event - Appointment Completed",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200 or 201\", function () {",
									"    pm.expect(pm.response.code).to.be.oneOf([200, 201]);",
									"});",
									"",
									"pm.test(\"Response has billId\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('billId');",
									"});",
									"",
									"// Save bill ID for other requests",
									"if (pm.response.code === 200 || pm.response.code === 201) {",
									"    var jsonData = pm.response.json();",
									"    pm.collectionVariables.set(\"bill_id\", jsonData.billId);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"eventType\": \"APPOINTMENT_COMPLETED\",\n  \"appointmentId\": 1,\n  \"patientId\": 1,\n  \"doctorId\": 1\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/v1/billing-events",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"v1",
								"billing-events"
							]
						},
						"description": "Process billing event when appointment is completed. Generates a bill with consultation fee (₹500), estimated medication fee (₹200), and tax (5%)."
					},
					"response": []
				},
