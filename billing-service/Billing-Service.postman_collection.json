							"path": [
								"v1",
								"bills",
								"patient",
								"{{patient_id}}"
							],
							"query": [
								{
									"key": "page",
									"value": "1"
								},
								{
									"key": "limit",
									"value": "20"
								}
							]
						},
						"description": "Get all bills for a specific patient with pagination."
					},
					"response": []
				}
