				{
					"name": "Get Bills by Patient",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"All bills belong to patient\", function () {",
									"    var jsonData = pm.response.json();",
									"    var content = jsonData.content || [];",
									"    content.forEach(function(bill) {",
									"        pm.expect(bill.patientId).to.equal(parseInt(pm.collectionVariables.get('patient_id')));",
									"    });",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/v1/bills/patient/{{patient_id}}?page=1&limit=20",
							"host": [
