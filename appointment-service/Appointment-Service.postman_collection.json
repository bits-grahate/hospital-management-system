		{
			"name": "Book Appointment",
			"item": [
				{
					"name": "Book Appointment",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 201\", function () {",
									"    pm.response.to.have.status(201);",
									"});",
									"",
									"pm.test(\"Response has appointmentId\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('appointmentId');",
									"});",
									"",
									"// Save appointment ID for other requests",
									"if (pm.response.code === 201) {",
									"    var jsonData = pm.response.json();",
									"    pm.collectionVariables.set(\"appointment_id\", jsonData.appointmentId);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"patientId\": 1,\n  \"doctorId\": 1,\n  \"slotStart\": \"2025-11-15T14:00:00\",\n  \"slotEnd\": \"2025-11-15T14:30:00\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/v1/appointments",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"v1",
								"appointments"
							]
						},
						"description": "Book a new appointment. Validates patient, doctor, slot availability, clinic hours (9 AM - 6 PM), lead time (minimum 2 hours from now), and daily cap (max 20 appointments/day/doctor)."
					},
					"response": []
				},
